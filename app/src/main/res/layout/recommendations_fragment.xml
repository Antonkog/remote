<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/recent_devices_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="28dp"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/text_subscriptions"
                style="@style/KiviRecommendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recom_kivi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_subscriptions" />


            <TextView
                android:id="@+id/text_channel"
                style="@style/KiviRecommendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recom_chennel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_recommendations" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_channels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_channel" />


            <TextView
                android:id="@+id/text_apps"
                style="@style/KiviRecommendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recom_apps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_channels" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_apps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_apps" />

            <TextView
                android:id="@+id/text_ports"
                style="@style/KiviRecommendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recom_inputs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_apps" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_ports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_ports" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_ports" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</layout>
