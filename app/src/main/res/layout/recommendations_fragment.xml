<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/recs_refresh_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/xx_large"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
        android:id="@+id/scroll_top"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/recommendations_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="28dp"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/text_subscriptions"
                style="@style/KiviRecommendText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recom_kivi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/img_recommend_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/recicler_recommendations"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/js_right" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_subscriptions" />


            <TextView
                android:id="@+id/text_channel"
                style="@style/KiviRecommendText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recom_chennel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_recommendations" />


            <ImageView
                android:id="@+id/img_channels_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/recicler_channels"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_recommendations"
                app:srcCompat="@drawable/js_right" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_channels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_channel" />


            <TextView
                android:id="@+id/text_apps"
                style="@style/KiviRecommendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recom_apps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_channels" />


            <ImageView
                android:id="@+id/img_apps_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/recicler_apps"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_channels"
                app:srcCompat="@drawable/js_right" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_apps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_apps" />

            <TextView
                android:id="@+id/text_ports"
                style="@style/KiviRecommendText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recom_inputs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_apps" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recicler_ports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_ports" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recicler_ports" />

        </android.support.constraint.ConstraintLayout>

        </ScrollView>


    </android.support.design.widget.CoordinatorLayout>
</layout>
