<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_rename"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/ic_letter_a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/tv_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="sans-serif"
            android:text="Переименовать устройство"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_rename"
            app:layout_constraintStart_toEndOf="@+id/iv_rename"
            app:layout_constraintTop_toTopOf="@+id/iv_rename" />

        <ImageView
            android:id="@+id/iv_auto_connect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_rename"
            app:srcCompat="@drawable/ic_loading" />

        <TextView
            android:id="@+id/tv_auto_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="sans-serif"
            android:text="Автоподключение"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_auto_connect"
            app:layout_constraintStart_toEndOf="@+id/iv_auto_connect"
            app:layout_constraintTop_toTopOf="@+id/iv_auto_connect" />

        <Switch
            android:id="@+id/switch_auto_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_auto_connect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_auto_connect" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="31dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#0F6BFB"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_auto_connect"
            tools:text="УСТРОЙСТВО FK32GU54" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_info_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            tools:listitem="@layout/tv_info_item"
            app:layout_constraintBottom_toTopOf="@+id/tv_forget_device"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_device_name" />

        <ImageView
            android:id="@+id/iv_forget_device"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="31dp"
            app:srcCompat="@drawable/ic_red_cross"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_forget_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="sans-serif"
            android:text="Забыть устройство"
            android:textColor="#E02020"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_forget_device"
            app:layout_constraintStart_toEndOf="@+id/iv_forget_device"
            app:layout_constraintTop_toTopOf="@+id/iv_forget_device" />

    </android.support.constraint.ConstraintLayout>
</layout>
