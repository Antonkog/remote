<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearanceSmall">@style/KiviMainTextAppearance</item>
    </style>

    <style name="Light" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <!--<item name="android:textViewStyle">@style/KiviTextViewStyle</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/btnDark</item>
        <item name="android:textAppearanceSmall">@style/KiviMainTextAppearance</item>
    </style>


    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/royal_blue</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <!--  <item name="android:background">@color/colorPrimary</item>-->
    </style>

    <style name="KiviMainTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>

    <style name="KiviMainTextMedium" parent="KiviMainTextAppearance">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>


    <style name="KiviRecommendText" parent="KiviMainTextMedium">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="KiviRecommendCard" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginLeft">@dimen/recom_card_margin</item>
        <item name="android:layout_marginBottom">@dimen/recom_card_margin</item>
        <item name="cardCornerRadius">@dimen/recom_card_radius</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/recom_card_elevation</item>
    </style>

    <style name="KiviOldApiCard" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:contentDescription">@string/recom_kivi</item>
        <item name="android:background">@drawable/white_bg_rounded</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">@dimen/recom_card_margin</item>
        <item name="android:layout_marginBottom">@dimen/recom_card_margin</item>
    </style>


    <style name="KiviRecommendRecicler" parent="AppTheme">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="KiviMainTextSmall" parent="KiviMainTextAppearance">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="DiscoveryCheckBoxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!--<item name="colorButtonNormal">@color/teal_blue</item>-->
        <item name="colorControlHighlight">@color/colorSecondaryText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DigitButton">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">@drawable/selector_digit_button</item>
    </style>

    <style name="Divider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider</item>
    </style>


    <style name="RecsText">
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
